# WeAD AI Music Composer - Environment Configuration
# Copy this file to .env.local and fill in your values

# ===========================================
# Domain Configuration
# ===========================================
NEXT_PUBLIC_DOMAIN=your-domain.com
NEXT_PUBLIC_BASE_URL=https://your-domain.com
NEXTAUTH_URL=https://your-domain.com

# ===========================================
# BNB Chain (BSC) Configuration
# ===========================================
NEXT_PUBLIC_CHAIN_ID=56
NEXT_PUBLIC_RPC_URL=https://bsc-dataseed.binance.org/
NEXT_PUBLIC_NETWORK_NAME=BSC Mainnet
NEXT_PUBLIC_CURRENCY_SYMBOL=BNB
NEXT_PUBLIC_EXPLORER_URL=https://bscscan.com

# BSC RPC URLs
BSC_RPC_URL=https://bsc-dataseed.binance.org/
BSC_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545/

# ===========================================
# Blockchain Private Keys (NEVER COMMIT!)
# ===========================================
PRIVATE_KEY=your_private_key_here

# BSCScan API Key (get from bscscan.com/myapikey)
BSCSCAN_API_KEY=your_bscscan_api_key_here

# ===========================================
# Smart Contracts (BSC Mainnet)
# ===========================================
NEXT_PUBLIC_WEAD_TOKEN_ADDRESS=0xCF99bF2cbD83A580437d39A5092C1665Faa9898B
NEXT_PUBLIC_MUSIC_PAYMENT_ADDRESS=0xDA90A244279C1BB9D0EA156D26A842a3B1bCB9BE

# Platform Wallet (receives payments)
NEXT_PUBLIC_PLATFORM_WALLET=your_platform_wallet_address

# ===========================================
# AI Music Generation API
# ===========================================
# Contact licensing@wead.io for API access
AI_MUSIC_API_KEY=contact_licensing_for_api_access
AI_MUSIC_BASE_URL=proprietary_endpoint

# ===========================================
# IPFS Configuration (Optional)
# ===========================================
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_API_KEY=your_pinata_secret
IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs/

# ===========================================
# Production Configuration
# ===========================================
NODE_ENV=production
NEXT_PUBLIC_IS_PRODUCTION=true

# ===========================================
# Google OAuth (Optional)
# ===========================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
NEXTAUTH_SECRET=your_nextauth_secret

